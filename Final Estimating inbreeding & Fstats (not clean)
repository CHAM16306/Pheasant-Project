# malay.freq.0 = as.data.frame(malay.freq.table$X)
# malay.tot.allele.freq = (malay.freq.1)^2 +(malay.freq.0)^2
# 
# # malay.EHom=1-2* malay.tot.allele.freq*(1- malay.tot.allele.freq)
